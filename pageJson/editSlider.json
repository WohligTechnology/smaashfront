        "validation": ["required", "trim", "unique"],
        "url": "city/getAll",
        "model":"city"
    }, {
        "name": "Order",
        "type": "text",
        "tableRef": "order",
        "placeholder": "Enter order",
        "id": "input5",
        "validation": ["required", "trim", "unique"],
        "url": "",
        "model":"order"
    }, {
        "name": "Image",
        "type": "image",
        "tableRef": "image",
        "placeholder": "Enter City Picture",
        "id": "input4",
        "validation": ["required", "trim", "unique"],
        "url": "",
        "model": "image"
    }],
    "action": [{
        "name": "submit",
        "action": "submitSlider"
    }, {
        "name": "cancel",
        "action": "cancelSlider",
        "stateName": "page({jsonName:'viewSlider'})"
    }],
    "apiCall": {
        "url": "slider/save",
